<div class="search-bar">

  <%= form_tag "/search" do %>
    <span><%= text_field_tag :query, nil, placeholder: 'Search by artist...', :id => "search" %></span>
    <span><%#= image_submit_tag "search.png", class: 'searchTag' %></span>
    <span><%= submit_tag :Search, class: 'searchTag' %></span>
 
  <% end %>
</div>

